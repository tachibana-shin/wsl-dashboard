import { Theme, AppI18n, LayoutConstants } from "../../theme.slint";
import { CustomButton } from "../form_widgets.slint";

export component CheckUpdateDialog inherits Rectangle {
    in property <string> message_content: "";
    in property <bool> is_expire: false;
    in property <bool> show_cancel: true;
    callback download;
    callback close;
    background: #00000080;
    TouchArea { }

    Rectangle {
        width: 400px;
        height: 200px;
        background: Theme.card_bg;
        border-radius: 8px;
        border-width: 1px;
        border-color: Theme.border_color;
        drop-shadow-blur: 16px;
        drop-shadow-color: #00000040;
        VerticalLayout {
            padding: 24px;
            spacing: 16px;
            Text {
                text: root.is_expire ? AppI18n.t("dialog.expire_title", [AppI18n.version]) : AppI18n.t("dialog.update_check_title", [AppI18n.version]);
                font-size: 18px * LayoutConstants.font-scale;
                font-family: Theme.default_font;
                font-weight: 500;
                color: Theme.text_primary;
                horizontal-alignment: AppI18n.is-rtl ? right : left;
            }

            VerticalLayout {
                spacing: 8px;
                Text {
                    text: message_content;
                    font-size: 14px * LayoutConstants.font-scale;
                    font-family: Theme.default_font;
                    color: Theme.text_primary;
                    wrap: word-wrap;
                    horizontal-alignment: AppI18n.is-rtl ? right : left;
                }

                Text {
                    text: AppI18n.t("dialog.update_check_info", [AppI18n.version]);
                    font-size: 13px * LayoutConstants.font-scale;
                    font-family: Theme.default_font;
                    color: Theme.text_secondary;
                    wrap: word-wrap;
                    horizontal-alignment: AppI18n.is-rtl ? right : left;
                }
            }

            Rectangle {
                vertical-stretch: 1;
            }

            HorizontalLayout {
                alignment: AppI18n.is-rtl ? start : end;
                spacing: 12px;
                
                // Button 1 (Left-most visually)
                CustomButton {
                    text: AppI18n.is-rtl ? AppI18n.t("dialog.download_now", [AppI18n.version]) : (show_cancel ? AppI18n.t("dialog.download_later", [AppI18n.version]) : "");
                    visible: AppI18n.is-rtl || show_cancel;
                    height: (AppI18n.is-rtl || show_cancel) ? 32px : 0px;
                    primary: AppI18n.is-rtl;
                    clicked => {
                        if (AppI18n.is-rtl) {
                            root.download();
                        } else {
                            root.close();
                        }
                    }
                }

                // Button 2 (Right-most visually)
                CustomButton {
                    text: AppI18n.is-rtl ? (show_cancel ? AppI18n.t("dialog.download_later", [AppI18n.version]) : "") : AppI18n.t("dialog.download_now", [AppI18n.version]);
                    visible: !AppI18n.is-rtl || show_cancel;
                    height: (!AppI18n.is-rtl || show_cancel) ? 32px : 0px;
                    primary: !AppI18n.is-rtl;
                    clicked => {
                        if (AppI18n.is-rtl) {
                            root.close();
                        } else {
                            root.download();
                        }
                    }
                }
            }
        }
    }
}
