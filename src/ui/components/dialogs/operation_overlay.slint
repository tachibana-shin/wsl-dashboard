import { Theme, AppI18n, LayoutConstants } from "../../theme.slint";

export component OperationOverlay inherits Rectangle {
    in property <string> message: AppI18n.t("dialog.processing", [AppI18n.version]);
    callback clicked;
    background: #00000040; // Semi-transparent background
    
    // Allow clicking to trigger callback
    TouchArea {
        clicked => {
            root.clicked();
        }
    }

    Rectangle {
        width: 240px;
        height: 100px;
        background: Theme.card_bg;
        border-radius: 8px;
        border-width: 1px;
        border-color: Theme.border_color;
        drop-shadow-blur: 16px;
        drop-shadow-color: #00000020;
        VerticalLayout {
            padding: 20px;
            spacing: 12px;
            alignment: center;

            // Animated spinner or just an icon
            Text {
                text: "\u{E767}"; // Sound/Speaker icon as seen in reference
                font-family: Theme.icon_font;
                font-size: 24px;
                color: Theme.accent;
                horizontal-alignment: center;
            }

            Text {
                text: message;
                font-size: 14px * LayoutConstants.font-scale;
                font-family: Theme.default_font;
                color: Theme.text_primary;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }
    }
}
