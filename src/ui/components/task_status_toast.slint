import { Theme, AppI18n } from "../theme.slint";

export component TaskStatusToast inherits Rectangle {
    in property <string> text;
    in property <bool> is_shown: false;
    callback close;
    height: 52px;
    width: max(460px, layout.preferred-width + 40px);
    background: Theme.card_bg;
    border-radius: 8px;
    border-width: 1px;
    border-color: Theme.border_color;
    drop-shadow-blur: 12px;
    drop-shadow-color: #00000030;
    animate y {
        duration: 250ms;
        easing: ease-out;
    }
    animate opacity { duration: 250ms; }
    opacity: is_shown ? 1 : 0;
    layout := HorizontalLayout {
        padding-left: 20px;
        padding-right: 12px;
        spacing: 16px;
        
        // Progress Spinner (Icon/Speaker)
        VerticalLayout {
            alignment: center;
            Text {
                text: "\u{E995}"; // Volume/Speaker icon
                font-family: Theme.icon_font;
                font-size: 20px;
                color: Theme.accent;
            }
        }

        Text {
            text: text;
            font-size: 14px;
            color: Theme.text_primary;
            vertical-alignment: center;
        }

        // Spacer to push Close Button to the right
        Rectangle { }

        // Close Button
        VerticalLayout {
            alignment: center;
            TouchArea {
                width: 32px;
                height: 32px;
                clicked => {
                    root.close();
                }
                Text {
                    text: "\u{E10A}"; // Close icon
                    font-family: Theme.icon_font;
                    font-size: 14px;
                    color: parent.has-hover ? Theme.accent : Theme.text_secondary;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }
        }
    }
}
