import { Theme, AppI18n, LayoutConstants } from "../theme.slint";

export component TaskStatusToast inherits Rectangle {
    in property <string> text;
    in property <bool> is_shown: false;
    callback close;
    height: 52px;
    width: max(460px, layout.preferred-width + 40px);
    background: Theme.card_bg;
    border-radius: 8px;
    border-width: 1px;
    border-color: Theme.border_color;
    drop-shadow-blur: 12px;
    drop-shadow-color: #00000030;
    animate y {
        duration: 250ms;
        easing: ease-out;
    }
    animate opacity { duration: 250ms; }
    opacity: is_shown ? 1 : 0;
    layout := HorizontalLayout {
        padding-left: AppI18n.is-rtl ? 12px : 20px;
        padding-right: AppI18n.is-rtl ? 20px : 12px;
        spacing: 16px;
        
        // RTL: Close Button first
        if (AppI18n.is-rtl): VerticalLayout {
            alignment: center;
            TouchArea {
                width: 32px;
                height: 32px;
                clicked => {
                    root.close();
                }
                Text {
                    text: "\u{E10A}"; // Close icon
                    font-family: Theme.icon_font;
                    font-size: 14px;
                    color: parent.has-hover ? Theme.accent : Theme.text_secondary;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }
        }
        if (AppI18n.is-rtl): Rectangle { } // Spacer for RTL

        // Icon (Progress Spinner / Speaker)
        if (!AppI18n.is-rtl): VerticalLayout {
            alignment: center;
            Text {
                text: "\u{E995}"; // Volume/Speaker icon
                font-family: Theme.icon_font;
                font-size: 20px;
                color: Theme.accent;
            }
        }
        Text {
            text: text;
            font-size: 14px * LayoutConstants.font-scale;
            font-family: Theme.default_font;
            color: Theme.text_primary;
            vertical-alignment: center;
            horizontal-alignment: AppI18n.is-rtl ? right : left;
            horizontal-stretch: 1;
        }

        // Icon for RTL (at the end)
        if (AppI18n.is-rtl): VerticalLayout {
            alignment: center;
            Text {
                text: "\u{E995}"; // Volume/Speaker icon
                font-family: Theme.icon_font;
                font-size: 20px;
                color: Theme.accent;
            }
        }

        // Spacer for LTR
        if (!AppI18n.is-rtl): Rectangle { }

        // LTR: Close Button at the end
        if (!AppI18n.is-rtl): VerticalLayout {
            alignment: center;
            TouchArea {
                width: 32px;
                height: 32px;
                clicked => {
                    root.close();
                }
                Text {
                    text: "\u{E10A}"; // Close icon
                    font-family: Theme.icon_font;
                    font-size: 14px;
                    color: parent.has-hover ? Theme.accent : Theme.text_secondary;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }
        }
    }
}
