import { Theme, AppI18n, LayoutConstants } from "../theme.slint";
import { CustomScrollbar } from "./scrollbar.slint";

export component CustomLineEdit inherits Rectangle {
    in-out property <string> text;
    in property <string> placeholder-text;
    in property <bool> enabled: true;
    callback edited(string);
    height: 32px;
    background: Theme.input_bg;
    border-width: 1px;
    border-color: input-focus.has-focus ? Theme.accent : Theme.input_border;
    border-radius: 4px;
    HorizontalLayout {
        padding-left: 15px;
        padding-right: 15px;
        input-focus := TextInput {
            text <=> root.text;
            color: Theme.text_primary;
            font-family: Theme.default_font;
            font-size: 13px * LayoutConstants.font-scale;
            vertical-alignment: center;
            horizontal-alignment: AppI18n.is-rtl ? right : left;
            single-line: true;
            enabled: root.enabled;
            accepted => {
                root.edited(self.text);
            }
            edited => {
                root.edited(self.text);
            }
        }
    }

    Text {
        text: root.placeholder-text;
        color: (root.text == "" && root.placeholder-text != "") ? Theme.text_secondary : transparent;
        font-family: Theme.default_font;
        vertical-alignment: center;
        horizontal-alignment: AppI18n.is-rtl ? right : left;
        x: 15px;
        width: parent.width - 30px;
    }
}

export component CustomComboBox inherits Rectangle {
    in property <[string]> model;
    in-out property <int> current-index;
    in-out property <bool> open-dropdown: false;
    in property <length> dropdown-height: 160px;
    in property <bool> enabled: true;
    callback selected(int);
    height: 32px;
    opacity: root.enabled ? 1.0 : 0.6;
    
    // Main Box
    Rectangle {
        background: root.enabled ? Theme.input_bg : Theme.hover_bg;
        border-width: 1px;
        border-color: root.enabled ? Theme.input_border : Theme.border_color;
        border-radius: 4px;
        width: 100%;
        height: 100%;
        HorizontalLayout {
            padding-left: 15px;
            padding-right: 15px;
            alignment: space-between;
            
            // RTL: Arrow left, Text right
            if (AppI18n.is-rtl): Text {
                text: "▼";
                color: Theme.text_secondary;
                vertical-alignment: center;
                font-size: 10px;
            }
            Text {
                text: root.model[root.current-index];
                color: Theme.text_primary;
                font-family: Theme.default_font;
                font-size: 13px * LayoutConstants.font-scale;
                vertical-alignment: center;
                horizontal-alignment: AppI18n.is-rtl ? right : left;
                horizontal-stretch: 1;
                overflow: elide;
                min-width: 0;
            }

            // LTR: Text left, Arrow right
            if (!AppI18n.is-rtl): Text {
                text: "▼";
                color: Theme.text_secondary;
                vertical-alignment: center;
                font-size: 10px;
            }
        }

        TouchArea {
            enabled: root.enabled;
            clicked => {
                root.open-dropdown = !root.open-dropdown;
            }
        }
    }

    // Dropdown overlay - positioned relative to root
    if (root.open-dropdown): Rectangle {
        x: 0;
        y: root.height + 4px;
        width: root.width;
        height: Math.min(root.model.length * 32px + 2px, root.dropdown-height);
        background: Theme.input_bg;
        border-width: 1px;
        border-color: Theme.input_border;
        border-radius: 4px;
        drop-shadow-blur: 8px;
        drop-shadow-color: Theme.dark_mode ? #00000066 : #00000033;
        z: 1000;
        flick := Flickable {
            x: 1px;
            y: 1px;
            width: parent.width - 2px;
            height: parent.height - 2px;
            viewport-height: root.model.length * 32px;
            interactive: true;
            VerticalLayout {
                padding: 0;
                spacing: 0;
                alignment: start;
                for item[i] in root.model: Rectangle {
                    height: 32px;
                    background: area.pressed ? Theme.selected_bg : area.has-hover ? Theme.hover_bg : transparent;
                    border-radius: 2px;
                    area := TouchArea {
                        clicked => {
                            root.current-index = i;
                            root.selected(i);
                            root.open-dropdown = false;
                        }
                    }

                    Text {
                        text: item;
                        color: Theme.text_primary;
                        font-family: Theme.default_font;
                        font-size: 13px * LayoutConstants.font-scale;
                        vertical-alignment: center;
                        horizontal-alignment: AppI18n.is-rtl ? right : left;
                        x: AppI18n.is-rtl ? 0 : 15px;
                        width: AppI18n.is-rtl ? parent.width - 15px : parent.width - 30px;
                    }
                }
            }
        }

        // Scrollbar - connected to flick
        if (flick.viewport-height > self.height - 2px): CustomScrollbar {
            x: AppI18n.is-rtl ? 2px : parent.width - 8px;
            y: 1px;
            width: 6px;
            height: parent.height - 2px;
            maximum: flick.viewport-height - flick.height;
            page_size: flick.height;
            value: -flick.viewport-y;
            scroll_to(v) => {
                flick.viewport-y = -v;
            }
        }
    }
}

export component CustomCheckBox inherits Rectangle {
    in-out property <bool> checked;
    in property <string> text;
    in property <bool> enabled: true;
    callback toggled;
    // height: 20px; // Removed fixed height to allow wrapping
    background: transparent;
    opacity: root.enabled ? 1.0 : 0.5;
    HorizontalLayout {
        spacing: 12px;
        alignment: AppI18n.is-rtl ? end : start;

        // Check Box Container
        if (!AppI18n.is-rtl): Rectangle {
            width: 18px;
            height: 18px;
            y: (parent.height - self.height) / 2;
            border-width: 1px;
            border-color: root.checked ? Theme.accent : Theme.input_border;
            background: root.checked ? Theme.accent : Theme.input_bg;
            border-radius: 3px;

            // Checkmark
            // Checkmark using Path for better performance and check without font issues
            Path {
                width: 100%;
                height: 100%;
                // Simple checkmark path centered in 18x18 box
                commands: "M 4 9 L 7 12 L 14 5";
                stroke: #FFFFFF;
                stroke-width: 1.5px;
                opacity: root.checked ? 1 : 0;
            }
        }
        if (AppI18n.is-rtl): Text {
            text: root.text;
            font-size: 13px * LayoutConstants.font-scale;
            font-family: Theme.default_font;
            color: Theme.text_primary;
            vertical-alignment: center;
            horizontal-alignment: right;
            wrap: word-wrap;
            horizontal-stretch: 1;
        }

        // Label
        if (!AppI18n.is-rtl): Text {
            text: root.text;
            font-size: 13px * LayoutConstants.font-scale;
            font-family: Theme.default_font;
            color: Theme.text_primary;
            vertical-alignment: center;
            wrap: word-wrap;
            horizontal-stretch: 1;
        }
        if (AppI18n.is-rtl): Rectangle {
            width: 18px;
            height: 18px;
            y: (parent.height - self.height) / 2;
            border-width: 1px;
            border-color: root.checked ? Theme.accent : Theme.input_border;
            background: root.checked ? Theme.accent : Theme.input_bg;
            border-radius: 3px;

            // Checkmark
            // Checkmark using Path for better performance and check without font issues
            Path {
                width: 100%;
                height: 100%;
                // Simple checkmark path centered in 18x18 box
                commands: "M 4 9 L 7 12 L 14 5";
                stroke: #FFFFFF;
                stroke-width: 1.5px;
                opacity: root.checked ? 1 : 0;
            }
        }
    }

    TouchArea {
        enabled: root.enabled;
        clicked => {
            root.checked = !root.checked;
            root.toggled();
        }
    }
}

export component CustomButton inherits Rectangle {
    in property <string> text;
    in property <bool> primary: false;
    in property <bool> enabled: true;
    callback clicked;
    border-radius: 4px;
    background: root.primary ? Theme.accent : (touch.pressed ? Theme.selected_bg : (touch.has-hover ? Theme.hover_bg : Theme.input_bg));
    border-width: root.primary ? 0 : 1px;
    border-color: Theme.input_border;
    opacity: root.enabled ? 1.0 : 0.6;
    HorizontalLayout {
        padding-left: 15px;
        padding-right: 15px;
        Text {
            text: root.text;
            color: root.primary ? #FFFFFF : Theme.text_primary;
            font-family: Theme.default_font;
            font-size: 13px * LayoutConstants.font-scale;
            vertical-alignment: center;
            horizontal-alignment: center;
        }
    }

    touch := TouchArea {
        enabled: root.enabled;
        clicked => {
            root.clicked();
        }
    }
}
