import { Theme, AppInfo, AppI18n } from "../theme.slint";

export component AboutView inherits VerticalLayout {
    spacing: 20px;
    padding-left: 4px;
    padding-right: 16px;
    padding-top: 8px;
    padding-bottom: 8px;
    alignment: start;
    callback open_url(string);
    callback check_update_clicked();
    Rectangle {
        background: Theme.card_bg;
        border-radius: 8px;
        border-width: 1px;
        border-color: Theme.border_color;
        VerticalLayout {
            spacing: 15px;
            padding: 8px;
            VerticalLayout {
                spacing: 24px;
                Text {
                    text: AppI18n.t("about.title", [AppI18n.version]);
                    font-size: 14px;
                    font-weight: 500;
                    color: Theme.text_primary;
                }

                Text {
                    text: AppI18n.t("about.description", [AppI18n.version]);
                    font-size: 14px;
                    color: Theme.text_secondary;
                    wrap: word-wrap;
                    min-height: 80px;
                }
            }

            Rectangle {
                height: 1px;
                background: Theme.border_color;
            }

            VerticalLayout {
                spacing: 20px;
                VerticalLayout {
                    spacing: 6px;
                    Text {
                        text: AppI18n.t("about.version", [AppI18n.version]);
                        font-size: 13px;
                        font-weight: 500;
                        color: Theme.text_primary;
                    }

                    HorizontalLayout {
                        spacing: 6px;
                        alignment: start;
                        Text {
                            text: "v" + AppInfo.version;
                            font-size: 13px;
                            color: Theme.text_secondary;
                            TouchArea {
                                mouse-cursor: pointer;
                                clicked => {
                                    root.check_update_clicked();
                                }
                            }
                        }

                        if (AppInfo.checking_update): Text {
                            text: "(" + AppI18n.t("about.check_update", [AppI18n.version]) + ")";
                            font-size: 12px;
                            color: Theme.accent;
                        }
                        if (!AppInfo.checking_update && AppInfo.has_update): Text {
                            text: "(" + AppI18n.t("about.new_version", [AppInfo.latest_version, AppI18n.version]) + ")";
                            font-size: 12px;
                            color: #FF4D4F;
                            TouchArea {
                                mouse-cursor: pointer;
                                clicked => {
                                    root.open_url(AppInfo.release_url);
                                }
                            }
                        }
                    }
                }

                VerticalLayout {
                    spacing: 6px;
                    Text {
                        text: AppI18n.t("about.homepage", [AppI18n.version]);
                        font-size: 13px;
                        font-weight: 500;
                        color: Theme.text_primary;
                    }

                    Text {
                        text: AppInfo.homepage;
                        font-size: 13px;
                        color: Theme.accent;
                        TouchArea {
                            mouse-cursor: pointer;
                            clicked => {
                                root.open_url(AppInfo.homepage);
                            }
                        }
                    }
                }

                VerticalLayout {
                    spacing: 6px;
                    Text {
                        text: AppI18n.t("about.issues", [AppI18n.version]);
                        font-size: 13px;
                        color: Theme.text_primary;
                        TouchArea {
                            mouse-cursor: pointer;
                            clicked => {
                                root.open_url(AppInfo.issues_url);
                            }
                        }
                    }
                }

                VerticalLayout {
                    spacing: 6px;
                    Text {
                        text: AppI18n.t("about.discussions", [AppI18n.version]);
                        font-size: 13px;
                        color: Theme.text_primary;
                        TouchArea {
                            mouse-cursor: pointer;
                            clicked => {
                                root.open_url(AppInfo.discussions_url);
                            }
                        }
                    }
                }
            }
        }
    }
}
